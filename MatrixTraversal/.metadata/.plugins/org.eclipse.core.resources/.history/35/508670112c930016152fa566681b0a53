package org.gollax.matrixtraversal;
public class MatrixTraversal {


	
	public void traverse(Matrix m,int startRow, int endRow, int startColumn, int endColumn) throws MatrixOperationException{
		for(int index=startColumn;index<endColumn;index++){
			doSomething(m.getValue(startRow, index));
		}
		for(int index=startRow; index<endRow;index++){
			doSomething(m.getValue(index,endColumn));
		}
		for(int index=endColumn;index<startRow; --index){
			doSomething(m.getValue(endRow,))
		}
	}

	private void doSomething(int value) {
		// TODO Auto-generated method stub
		System.out.println(value);
	}

}
